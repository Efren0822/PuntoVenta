@model PuntoVenta.Models.Productos.Products

@{
    ViewBag.Title = "Eliminar";
}

<h2 class="text-2xl font-bold mb-4">@ViewBag.Title</h2>

<h3 class="text-xl font-bold mb-2">¿Estás seguro de que deseas eliminar este producto?</h3>
<div class="mb-4">
    <h4 class="text-lg font-bold">Nombre del Producto: @Model.StrNombrePro</h4>
    <!-- Agrega más detalles del producto si lo deseas -->
</div>

<form asp-action="Eliminar" method="post" class="mb-4">
    <input type="hidden" asp-for="IdPro" />
    <button type="submit" class="btn btn-danger mr-2" onclick="return confirm('¿Estás seguro de querer eliminar este producto?');">Eliminar</button>
    <a asp-action="Productos" class="btn btn-secondary">Cancelar</a>
</form>
