@model PuntoVenta.Models.Usuario

@{
    ViewBag.Title = "Eliminar Usuario";
}

<h2 class="text-2xl font-bold mb-4">@ViewBag.Title</h2>

<h3 class="text-xl font-bold mb-2">¿Estás seguro de que deseas eliminar este usuario?</h3>
<div class="mb-4">
    <h4 class="text-lg font-bold">Nombre de Usuario: @Model.strNombre</h4>
</div>

<form asp-action="Borrar" class="mb-4">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger mr-2" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
