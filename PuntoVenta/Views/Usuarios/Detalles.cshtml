@model PuntoVenta.Models.Usuario


<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h2 class="text-2xl font-bold mb-4">Detalles del Usuario</h2>

					<p class="mb-2"><strong>Nombre:</strong> @Model.strNombre</p>
					<p class="mb-2"><strong>Estado:</strong> @Model.Estado.strNombreEstado</p>
					<p class="mb-2"><strong>Tipo de Usuario:</strong> @Model.TipoUsuario.strTipoUsuario</p>
					<div>
						<a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary mr-2">Editar</a>
						@Html.ActionLink("Borrar", "Borrar", new { id = Model.Id }, new { @class = "btn btn-danger" })
						@Html.ActionLink("Regresar", "Index", "Usuarios", null, new { @class = "btn btn-secondary" })
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


