@model PuntoVenta.Models.Usuario

<h2 class="text-2xl font-bold mb-4">Detalles del Usuario</h2>

<p class="mb-2"><strong>Nombre:</strong> @Model.strNombre</p>
<p class="mb-2"><strong>Estado:</strong> @Model.Estado</p>
<p class="mb-2"><strong>Tipo de Usuario:</strong> @Model.TipoUsuario</p>

<a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary mr-2">Editar</a>
@Html.ActionLink("Borrar", "Borrar", new { id = Model.Id }, new { @class = "btn btn-danger" })
